# OneStopJustice Production Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=mongodb://admin:password@onestopjustice-mongodb:27017/justice?authSource=admin
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=justice

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5910,http://localhost:3001,https://yourdomain.com

# Pinata IPFS Configuration
PINATA_API_Key=your-pinata-api-key
PINATA_API_Secret=your-pinata-api-secret
PINATA_JWT=your-pinata-jwt-token

# Blockchain Configuration
PRIVATE_KEY=your-private-key
AMOY_RPC_URL=https://rpc-amoy.polygon.technology/
CONTRACT_ADDRESS=your-contract-address
ETH_KEY=your-eth-key
BLOCKCHAIN_TEST_MODE=false

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs
VITE_NODE_ENV=production
VITE_GEMINI_API_KEY=your-gemini-api-key
